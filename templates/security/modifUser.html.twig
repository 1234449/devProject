{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }} Modification Profil
{% endblock %}

{% block TitrePage%}
    Modification Profil
{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-success col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-danger col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}

    {{ form_start(form) }}
    <label for="">Pseudo</label>
    {{ form_row(form.username) }}
    <label for="">Nom</label>
    {{ form_row(form.nom) }}
    <label for="">Prenom</label>
    {{ form_row(form.prenom) }}
    <label for="">Email</label>
    {{ form_row(form.email) }}
    <label for="">Profil Linkedin</label>
    {{ form_row(form.linkedin) }}
    <label for="">Profil GitHub</label>
    {{ form_row(form.github) }}
    <label for="">Bio</label>
    {{ form_row(form.bio) }}
    <label for="">Ville</label>
    {{ form_row(form.ville) }}
    <label for="">Situation Professionnel</label>
    {{ form_row(form.occupation) }}

    <label for="">Photo de profil</label>
    {{ form_row(form.photoModif, { 'attr':{"onChange":"loadFile(event)"} }) }}
    <div class="col-md-12 text-center">

        <img id="image" style='width:300px'>

    </div>
    {{ form_row(form.valider) }}



    {{ form_end(form) }}

    <script>

        var loadFile = function (event) {
            var image = document.getElementById('image');

            image.src = URL.createObjectURL(event.target.files[0]);
        };

    </script>
    <script src="{{ asset('js/select2.js') }}"></script>
    <script>
        $(function(){
            $('.select2').select2()

        })
    </script>
{% endblock %}

