<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="#">
    <title>{% block title %} DicoWeb | {% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
        <link rel="stylesheet" href="{{ asset('css/profile.css') }}"/>
    {% endblock %}

    {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
</head>
<body  style="overflow-x: hidden;">
    <canvas id="canvas1"></canvas>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><h1>DicoWeb</h1></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="#"> <h1>Home </h1>
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><h1>Newsletter</h1></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><h1>About</h1></a>
                        </li>
                    </ul>
                </div>
        </div>
    </nav>
    <div class="row justify-content-center mb-3">
        <div class="col-md-6 d-flex justify-content-center" style="margin-top: 15px">
            <h1>{% block TitrePage %}{% endblock %}</h1>
        </div>
    </div>

    <div class="container mt-3">
        {% block body %}{% endblock %}
    </div>
    <footer class="">
        <div class="copyright-area">
            <div class="row">
                <div class="col-xl-6 col-lg-6 text-center text-lg-left">
                    <div class="copyright-text">
                        <p>Copyright &copy; 2021, All Right Reserved <a href="webforce3.fr/">WF3</a></p>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 d-none d-lg-block text-center">
                    <div class="footer-menu">
                        <ul>
                            <li><a href="#">Parcour</a></li>
                            <li><a href="#">Contactez Nous</a></li>
                            <li><a href="#">Privacy</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    {% block JS %}
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/particule.js') }}"></script>
    {% endblock %}
</body>
</html>