{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} Liste des Astuces
{% endblock %}

{% block TitrePage%}
    Liste des Tips
{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-success col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-danger col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Resume</th>
            <th>Auteur</th>
            <th>Cat√©gorie</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for tip in tips %}
            <tr>
                <td>{{ tip.nom }}</td>
                <td>{{ tip.resume }}</td>
                <td>{{ tip.userName }}</td>
                <td>{{ tip.categorieTips.nom }}</td>
                <td><a class="btn btn-primary" href="{{ path('modifTips',{'id':tip.id})}}">Modifier</a><a class="btn btn-danger" href="{{ path('deleteTip',{'id':tip.id})}}">Supprimer</a></td>

            </tr>
        {% endfor %}


        </tbody>



    </table>



{% endblock %}